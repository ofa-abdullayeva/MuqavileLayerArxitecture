@model ContractUpdateViewModel
@{
    ViewData["Title"] = "Müqaviləni Redaktə Et";
}

<h2 class="mb-4">Müqaviləni Redaktə Et</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ContractId" />

    <div class="row">
        <div class="col-md-4">
            <label asp-for="ContractNumber" class="form-label">Müqavilə nömrəsi</label>
            <input asp-for="ContractNumber" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="ContractYear" class="form-label">Müqavilə ili</label>
            <input asp-for="ContractYear" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="TaxNumber" class="form-label">VÖEN</label>
            <input asp-for="TaxNumber" class="form-control" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="OrganizationId" class="form-label">Təşkilat</label>
            <select asp-for="OrganizationId" asp-items="ViewBag.Organizations" class="form-select"></select>
        </div>
        <div class="col-md-6">
            <label asp-for="Subject" class="form-label">Mövzu</label>
            <textarea asp-for="Subject" class="form-control"></textarea>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label asp-for="Amount" class="form-label">Məbləğ</label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="AmountTypeId" class="form-label">Məbləğ tipi</label>
            <select asp-for="AmountTypeId" asp-items="ViewBag.AmountTypes" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="PaymentMethodId" class="form-label">Ödəniş üsulu</label>
            <select asp-for="PaymentMethodId" asp-items="ViewBag.PaymentMethods" class="form-select"></select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label">Başlama tarixi</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="EndDate" class="form-label">Bitmə tarixi</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label asp-for="CategoryId" class="form-label">Kateqoriya</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="CategoryTypeId" class="form-label">Kateqoriya tipi</label>
            <select asp-for="CategoryTypeId" asp-items="ViewBag.CategoryTypes" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="ContractStatusId" class="form-label">Status</label>
            <select asp-for="ContractStatusId" asp-items="ViewBag.ContractStatuses" class="form-select"></select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="GuaranteeId" class="form-label">Zəmanət</label>
            <select asp-for="GuaranteeId" asp-items="ViewBag.Guarantees" class="form-select"></select>
        </div>
        <div class="col-md-6">
            <label asp-for="Fine" class="form-label">Cərimə</label>
            <input asp-for="Fine" class="form-control" />
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="Notes" class="form-label">Qeyd</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="d-flex justify-content-end mt-4 gap-2">
        <button type="submit" class="btn btn-primary">Yenilə</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</form>
