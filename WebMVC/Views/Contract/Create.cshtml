@model ContractCreateViewModel


@{
    ViewData["Title"] = "Yeni Müqavilə Əlavə Et";
}

<h2 class="mb-4">Yeni Müqavilə Əlavə Et</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Contract">
    <div class="row">
        <!-- 4/1 hissə - sol tərəf -->
        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="ContractNumber" class="form-label">Müqavilə nömrəsi</label>
                <input asp-for="ContractNumber" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ContractYear" class="form-label">Müqavilə ili</label>
                <input asp-for="ContractYear" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="TaxNumber" class="form-label">VÖEN</label>
                <input asp-for="TaxNumber" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Məbləğ</label>
                <input asp-for="Amount" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="AmountTypeId" class="form-label">Məbləğ tipi</label>
                <select asp-for="AmountTypeId" asp-items="ViewBag.AmountTypes" class="form-select"></select>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Başlama tarixi</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">Bitmə tarixi</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>

        <!-- 4/3 hissə - sağ tərəf -->
        <div class="col-md-9">
            <div class="mb-3">
                <label asp-for="OrganizationId" class="form-label">Təşkilat</label>
                <select asp-for="OrganizationId" asp-items="ViewBag.Organizations" class="form-select"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Subject" class="form-label">Mövzu</label>
                <textarea asp-for="Subject" class="form-control"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="PaymentMethodId" class="form-label">Ödəniş üsulu</label>
                    <select asp-for="PaymentMethodId" asp-items="ViewBag.PaymentMethods" class="form-select"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="ContractStatusId" class="form-label">Müqavilə statusu</label>
                    <select asp-for="ContractStatusId" asp-items="ViewBag.ContractStatuses" class="form-select"></select>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <label>Əlaqələndirici şəxslər (Təşkilat üzrə)</label>
                    <select asp-for="SelectedOrgContactPersonIds" asp-items="ViewBag.OrgContactPersons" class="form-select" multiple></select>
                </div>
                <div class="col-md-6">
                    <label>Əlaqələndirici şəxslər (DİM üzrə)</label>
                    <select asp-for="SelectedSecContactPersonIds" asp-items="ViewBag.SecContactPersons" class="form-select" multiple></select>
                </div>
            </div>

            <div class="mb-3 mt-3">
                <label asp-for="Notes" class="form-label">Qeyd</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsDimRelated" class="form-check-input" />
                <label asp-for="IsDimRelated" class="form-check-label">DİM ilə əlaqəlidir</label>
            </div>

            <div class="mb-3">
                <label asp-for="Attachments" class="form-label">Fayllar əlavə et</label>
                <input asp-for="Attachments" type="file" class="form-control" multiple />
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-success">Yadda saxla</button>
                <a asp-action="/Contract/Index" class="btn btn-secondary">Geri</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (ViewBag.SwAlert != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Xəta baş verdi',
                    text: '@Html.Raw(ViewBag.SwAlert)'

                });
            </text>
        }
    </script>
}

