@{
    var userName = Context.Session.GetString("UserName");
    var accessLevel = Context.Session.GetString("AccessLevelName");
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Müqavilə Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            background-color: #eef1f7;
            font-family: 'Poppins', sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #fff;
            font-family: 'Poppins', sans-serif;
            color: white;
            transition: width 0.3s;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            bottom: 0;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

            .sidebar.collapsed {
                width: 80px;
            }

                .sidebar.collapsed .sidebar-title,
                .sidebar.collapsed .sidebar-header .admin-name,
                .sidebar.collapsed .nav-link span {
                    display: none;
                }

                .sidebar.collapsed .nav-link i {
                    margin: 0 auto;
                }

            .sidebar .sidebar-header {
                background-color: #38466B;
                padding: 1rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .sidebar .admin-name {
                font-weight: bold;
                font-size: 1rem;
                color: white;
            }

        .sidebar-toggle {
            font-size: 1.3rem;
            color: white;
            cursor: pointer;
        }

        .sidebar-title {
            padding: 1rem;
            text-align: center;
            font-weight: 600;
            text-transform: uppercase;
            color: #38466b;
            letter-spacing: 0.08em;
        }

        .nav-link {
            color: #38466b;
            word-spacing: 0.5rem;
            font-weight: 600;
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.85rem;
            transition: 0.3s;
        }

            .nav-link i {
                font-size: 1.3rem;
            }

            .nav-link:hover {
                background-color: #38466B;
                color: white;
                border-radius: 10px;
            }

            .nav-link.active {
                background-color: #38466B;
                color: white;
                border-radius: 10px;
                font-weight: bold;
            }

        .sidebar-bottom {
            margin-top: auto;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

            .sidebar-bottom .nav-link {
                font-size: 1rem;
            }

                .sidebar-bottom .nav-link:hover {
                    background-color: #2f3c58;
                }

        .content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .sidebar.collapsed + .content {
            margin-left: 80px;
        }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="admin-name">@userName (@accessLevel)</div>
            <div class="sidebar-toggle" onclick="toggleSidebar()" title="Sidebar aç/bağla">
                <i class="bi bi-list"></i>
            </div>
        </div>

        <div class="sidebar-title">Müqavilə Sistemi</div>

        <ul class="nav flex-column px-2">
            <li class="nav-item">
                <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" href="/">
                    <i class="bi bi-house"></i><span>Məlumat</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Organization" ? "active" : "")"
                   asp-controller="Organization" asp-action="Index">
                    <i class="bi bi-building"></i><span>Təşkilatlar</span>
                </a>

            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contract" ? "active" : "")"
                   asp-controller="Contract" asp-action="Index">
                    <i class="bi bi-file-earmark-text"></i><span>Müqavilə axtarış</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Contract/New") ? "active" : "")" href="/Contract/New">
                    <i class="bi bi-plus-circle"></i><span>Yeni müqavilə</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Reports") ? "active" : "")" href="/Reports">
                    <i class="bi bi-bar-chart"></i><span>Hesabatlar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Payments") ? "active" : "")" href="/Payments">
                    <i class="bi bi-cash-stack"></i><span>Ödənişlər</span>
                </a>
            </li>
        </ul>

        <div class="sidebar-bottom">
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-person-circle"></i><span>Profil</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Account/Logout">
                        <i class="bi bi-box-arrow-right"></i><span>Hesabdan çıxış</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="content" id="content">
        @RenderBody()
    </div>

 

    @RenderSection("Scripts", required: false)

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <script>

        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const content = document.getElementById("content");
            sidebar.classList.toggle("collapsed");
            content.classList.toggle("collapsed");
        }
        window.addEventListener('DOMContentLoaded', () => {
            @if (TempData["LoginSuccess"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Giriş uğurla tamamlandı',
                        text: @Html.Raw(Json.Serialize(TempData["LoginSuccess"]))
                                            });
                </text>
            }
                     });

            @if (TempData["OrgAddSuccess"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Təşkilat əlavə edildi',
                        text: @Html.Raw(Json.Serialize(TempData["OrgAddSuccess"]))
                                            });
                </text>
            }

            @if (TempData["OrgUpdateSuccess"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Təşkilat yeniləndi',
                        text: @Html.Raw(Json.Serialize(TempData["OrgUpdateSuccess"]))
                                            });
                </text>
            }

            @if (TempData["OrgDeleteSuccess"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Təşkilat silindi',
                        text: @Html.Raw(Json.Serialize(TempData["OrgDeleteSuccess"]))
                                            });
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Xəta baş verdi',
                        text: @Html.Raw(Json.Serialize(TempData["Error"]))
                                            });
                </text>
            }

     

        </script>
    

</body>

</html>


